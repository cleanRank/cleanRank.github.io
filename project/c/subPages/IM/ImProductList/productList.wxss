/* pages/vip/productList/productList.wxss */
page{
    background: #fff;
}
.productScroll{
    height: 100%;
}
.productList{
    display: flex;
    justify-content: center;
    align-items: center;
    flex-direction: column;
    padding: 0 24rpx;
}
.productItem{
    display: flex;
    justify-content: space-between;
    align-items: center;
    border-bottom: 1px solid #F4F4F4;
    padding: 30rpx 0 24rpx;
}
.productItem image{
    width: 160rpx;
    height: 160rpx;
    margin-right: 24rpx;
}
.productItem .productInfo{
    display: flex;
    justify-content: flex-start;
    align-items: flex-start;
    flex: 1;
    flex-direction: column;
    width: 518rpx;
}
.productInfo .productTitle{
    font-size: 30rpx;
    line-height: 42rpx;
    color: #444444;
    width: 100%;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    margin-bottom: 20rpx;
}
.productInfo .sendBtn{
    width: 100rpx;
    height: 56rpx;
    background: #FD455F;
    border-radius: 28rpx;
    text-align: center;
    line-height: 56rpx;
    font-size: 26rpx;
    color:#FFFFFF;
    align-self:flex-end;
}
  /* 无数据缺省 */
  .noData{
    display: flex;
    justify-content: flex-start;
    flex-direction: column;
    align-items: center;
}
.noData image{
    width: 320rpx;
    height: 215rpx;
    margin:300rpx 0 96rpx;
}
.noData .noDataInfo{
    font-size: 28rpx;
    height: 40rpx;
    color: #999;
}