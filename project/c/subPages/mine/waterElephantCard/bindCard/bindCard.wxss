page {
  background-color: #f4f4f4;
}
.page .page-card{
  width: 700rpx;
  height: 320rpx;
  margin: 0 auto;
  margin-top: 30rpx;
  position: relative;
  overflow: hidden;
}
.page .page-card image{
  display: block;
  width: 100%;
  height: 100%;
}
.page .page-card input{
  margin-top: -220rpx;
  margin-left: 68rpx;
  width: 560rpx;
  height: 60rpx;
  background: #f5f5f5;
  border-radius: 5rpx;
  padding-left: 20rpx;
  font-size: 26rpx;
}
.btn{
  position: fixed;
  width: 610rpx;
  height: 80rpx;
  line-height: 80rpx;
  left: 50%;
  bottom: 70rpx;
  border: 1px solid #FF3030;
  border-radius: 40rpx;
  text-align: center;
  transform:translateX(-50%); 
  background: #FF3030;
  color: #fff;
}
.msgBox {
  position: fixed;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  background: rgba(0,0,0,0.7);
}
.msgBox .msgBox-content {
  position: absolute;
  width: 630rpx;
  height: 500rpx;
  top: 50%;
  left: 50%;
  transform: translate(-50%,-50%);
  background: #fff;
  border-radius: 10rpx;
}
.msgBox .msgBox-content .msgBox-content-head {
  font-size: 34rpx;
  color: #333;
  text-align: center;
  margin-top: 48rpx;
}
.msgBox .msgBox-content .msgBox-content-img {
  display: block;
  width: 200rpx;
  height: 170rpx;
  margin: 24rpx auto;
}
.msgBox .msgBox-content .msgBox-content-msg {
  font-size: 28rpx;
  color: #999;
  text-align: center;
  margin-top: 40rpx;
}
.msgBox .msgBox-content .msgBox-content-btn {
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  color: #3E9BF9;
  font-size: 36rpx;
  border-top: 1px solid #ccc;
}