/* pages/components/shareFriends/shareFriends.wxss */
.shareFriends {
  width: 150rpx;
  text-align: center;
  height: 100%;
  position: relative;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  margin: 0 25rpx;
  padding: 0 25rpx;
}

.shareBtnImg {
  width: 70rpx;
  height: 70rpx;
  display: block;
  margin-bottom: 15rpx;
}

.shareBtnTxt {
  font-size: 29rpx;
  color: #777777;
  display: block;
}

.shareBtnOpcity {
  width: 100%;
  height: 100%;
  position: absolute;
  left: 0;
  top: 0;
  opacity: 0;
}
