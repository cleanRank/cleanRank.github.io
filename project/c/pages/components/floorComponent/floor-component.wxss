/* 海外购 */
.overseas-label{
  width: 102rpx;
  height: 32rpx;
  margin-right: 8rpx;
  vertical-align: middle;
}
/* 轮播 */
.floor-swiper{
  width: auto;
  height: 299rpx;
  overflow-x: scroll;
  margin-bottom: 20rpx;
}
.nav-1-left {
  white-space: nowrap;
  overflow: hidden;
  flex: 0 0 100%;
  border: none;
  margin-left: 24rpx;
}
.floor-scroll-item{
  display: inline-block;
  width: 200rpx;
  height: 299rpx;
  background: #fff;
  border-radius: 8rpx;
  margin-right: 12rpx;
  box-sizing: border-box;
  overflow: hidden;
}
.floor-scroll-item image{
  display: block;
  width: 200rpx;
  height: 200rpx;
  margin: auto;
  margin-bottom: 12rpx;
}
.swiper-tit,.swiper-subtit{
  font-size: 24rpx;
  color:#444;
  line-height: 33rpx;
  width: 100%;
  overflow: hidden;
  text-align: center;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.swiper-subtit{
  font-size: 28rpx;
  color: #FF5A60;
  line-height: 34rpx;
  margin-top: 4rpx;
}
.floorFourBan{
  width: 702rpx;
  height: 320rpx;
  margin: auto;
  margin-bottom: 12rpx;
}
.floorFourBan image{
  display: block;
  width: 100%;
  height: 100%;
  border-radius: 12rpx;
}
/* 三列 */
.floor_ban{
  width: 100%;
  height: auto;
}
.floor_ban image{
  display: block;
  width: 100%;
}
.floor-thirteen{
  /* display: flex;
  justify-content: center; */
  width: 100%;
  padding: 20rpx 24rpx;
  padding-right: 12rpx;
  padding-bottom: 0rpx;
  padding-top: 0;
  box-sizing: border-box;
  overflow: hidden;
}
.floor-thirteen-item{
  position:relative;
  width: 226rpx;
  float: left;
  background-color:#fff;
  border-radius: 8rpx;
  margin-bottom: 16rpx;
  margin-right: 12rpx;
}
.floor-thirteen-item .saleflag{
  position: absolute;
  left: 0;
  top: 0;
  width: 83rpx;
  height: 83rpx;
  z-index: 9;
}
.floor-thirteen-item .floor13,.floor-scroll-item .floor14{
  position: relative
}
/* .floor-thirteen-item:nth-child(3n+1){
  margin:0 12rpx;
} */
.floor-thirteen-item .thirteen-img{
  display: block;
  width: 226rpx;
  height:226rpx;
}
.floor4,.floor3{
  margin-bottom: 0rpx;
}
.floor14 .saveno14{
  width: 128rpx;
  height: 128rpx;
  left: 50%;
  margin-left: -75rpx;
  top:0;
  margin-top:36rpx; 
}
.oversea_txt{
  flex: 1
}

.box {
  width: 100%;
  padding: 0rpx 12rpx 0 24rpx;
  box-sizing:border-box;
  overflow: hidden;
  margin-bottom: 20rpx;
}

.article {
  position: relative;
  float: left;
  width: 226rpx;
  border-radius: 8rpx;
  background-color:#fff;
  padding-bottom: 16rpx;
  box-sizing: border-box;
  margin-bottom: 12rpx;
  margin-right: 12rpx;
}
.article image{
  display: block;
  width: 226rpx;
  height: 226rpx;
  margin-bottom: 16rpx;
}
.article .saveno{
  position: absolute;
   width: 128rpx;
   height: 128rpx;
   left: 50%;
   margin-left: -64rpx;
   top: 49rpx;
   z-index: 9;
}
.floor_out{
  padding: 0 13rpx;
}
.floor_out .floor_tit{
  font-size: 22rpx;
  color: #444;
  height: 60rpx;
  line-height: 30rpx;
   display: -webkit-box;   
   -webkit-box-orient: vertical;   
   text-overflow: ellipsis;  
   overflow: hidden;
   -webkit-line-clamp: 2; 
   margin-top: 12rpx;
   margin-bottom: 10rpx;
}
.floor_out .floor_price{
  font-size: 26rpx;
  color: #FF5A60;
  font-weight: bold;
}
.floor_out .smallBefore{
  font-size: 20rpx;
}
.floor_out .rebate_box{
  margin-top: 12rpx;
  display: flex;
}
.floor_out .rebateTxt{
  position: relative;
  width: 28rpx;
  height: 28rpx;
  text-align: center;
  color: #FFFFFF;
  font-size: 20rpx;
  line-height: 28rpx;
  background-color: #444;
  font-weight: 400;
  border-top-left-radius: 4rpx;
  border-bottom-left-radius: 4rpx;
}
.floor_out .rebate{
  position: relative;
  font-size: 20rpx;
  font-weight: 700;
  height: 28rpx !important;
  line-height: 26rpx;
  border: none;
  box-sizing: border-box;
  border-top-left-radius: 0;
  border-bottom-left-radius: 0;
  background:rgba(255,158,21,0.15);
  color:#714B16;
}
.floor_wrap_tit{
  width: 100%;
  height: auto;
  font-size: 34rpx;
  color: #fff;
}
.floor_wrap_tit image{
  display: block;
  width: 100%;
}




