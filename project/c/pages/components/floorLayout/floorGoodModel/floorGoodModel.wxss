@import "../../../../app.wxss";
.goodWrap{ 
  display: flex; 
  flex-direction: column; 
  overflow: hidden; 
  border-bottom: 1px solid #F8F8F8; 
  margin: 0 24rpx 0rpx 24rpx; 
  position: relative
} 
.goodWrap .floorGoodDetail{
  background-color:#fff;
  padding: 20rpx 20rpx;
  border-bottom-left-radius: 12rpx;
  border-bottom-right-radius: 12rpx;

}
.saveno{
  position: absolute;
  width: 128rpx;
  height: 128rpx;
  left: 50%;
  margin-left: -64rpx;
  top: 0;
  margin-top: 96rpx;
  z-index: 9;
}
.goodWrap:last-child{
  border-bottom: none
}
.goodImg{ 
  width: 702rpx; 
  height: 320rpx; 
  display: block; 
  border-radius: 12rpx 12rpx 0 0; 
} 
.goodName{ 
  color:#333;
font-size:34rpx;
height:48rpx;
line-height:48rpx;
margin-bottom:4rpx;
display:flex;
align-items:center;
} 
.goodSubName{ 
  color: #999; 
  font-size: 26rpx; 
  height: 37rpx; 
  line-height: 37rpx; 
  margin-bottom: 20rpx; 
  display: block; 
} 
.goodLabelCon{ 
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-bottom: 16rpx;
  overflow: hidden;
} 
.goodLabelCon .goodLabel{ 
  font-size: 18rpx; 
  height: 28rpx; 
  line-height: 28rpx; 
  padding: 0 8rpx; 
  border-radius: 4rpx; 
  margin-right: 10rpx; 
  display: block; 
  overflow: hidden;
} 
.goodLabel.promotion{ 
  color: #FF5A60; 
  background-color: #fff; 
  border: 1rpx solid #FF5A60;
  box-sizing: border-box;
} 
.goodLabel.rebate{
  color: #333;
  font-size: 20rpx;
  background-color: #F4D981;
  position: relative;
  font-weight: 700;
  line-height: 28rpx;
  border-top-left-radius: 0;
  border-bottom-left-radius: 0;
} 
.goodLabel.rebateTxt{
  width: 28rpx;
  height: 28rpx;
  text-align: center;
  line-height: 28rpx;
  background-color: #2E2E2E;
  font-size: 22rpx;
  color: #FFFFFF;
  margin-right: 0;
  border-top-right-radius: 0;
  border-bottom-right-radius: 0;
}
