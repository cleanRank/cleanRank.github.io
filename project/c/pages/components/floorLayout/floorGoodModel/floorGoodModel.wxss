.goodPrice{ 
  color: #FF5A60; 
  font-size: 46rpx; 
  height: 46rpx;
  line-height: 37rpx;
  font-weight: 600;
  margin-right: 10rpx;
  display: block;
} 
.smallBefore{ 
  font-size: 26rpx; 
  font-weight: bold;
} 
.goodBtnAll{ 
  display: flex; 
  flex-direction: row; 
  justify-content: flex-end; 
} 
.goodBtnAll .goodBtn{ 
  font-size: 26rpx; 
  height: 52rpx; 
  line-height: 52rpx; 
  border: 1rpx solid #FD455F; 
  border-radius: 30rpx; 
  padding: 0 40rpx; 
  display: block; 
  margin-left: 28rpx;
} 
.goodShare{ 
  color: #fff; 
  background-color: #FD455F; 
} 
.goodBuy{ 
  color: #FD455F;  
} 
.textEllipsis{ 
  overflow:hidden; 
  text-overflow:ellipsis; 
  white-space:nowrap; 
}
