page{
  background: #F4F4F4;
}
.page-head {
  width: 100%;
  height: 145rpx;
  background: #fff;
  overflow: hidden;
  padding: 0 24rpx;
}
.page-head .page-head-hp{
  font-size: 24rpx;
  color: #444;
  margin-top:20rpx;
  line-height: 33rpx;
}
.page-head .page-head-box {
  height: 52rpx;
  margin: 20rpx auto;
  border-radius: 36rpx;
  display: flex;
  justify-content: flex-start;
  font-size: 24rpx;
  color: #333;
  text-align: center;
  background:#fff;
}
.page-head .page-box{
  height: 52rpx;
  border-radius:28px;
  border:1px solid rgba(219,219,219,1);
  font-size: 24rpx;
  display: block;
  background:#fff;
  padding: 10rpx 24rpx;
  box-sizing: border-box;
  line-height: 33rpx;
}
.page-head .page-box.active{
  border: 1px solid rgba(253,69,95,1);
  color: #FD455F;
}
.page-head .page-box:not(:last-child){
  margin-right: 24rpx;
}
.page-content{
  position: absolute;
  height: calc(100% - 92rpx);
}
.page-content .page-content-item{
  background: #fff;
  padding: 24rpx;
  margin-top: 20rpx;
}
.page-content-item-name {
  display: flex;
  width: 100%;
  height: 60rpx;
  line-height: 60rpx;
}
.page-content-item-name .head{
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  display: block;
}
.page-content-item-name text{
  font-size: 24rpx;
  color: #333;
  margin: 0 30rpx;
}
.page-content-item-name .star{
  height: 60rpx;
}
.page-content-item-name .star image{
  width: 24rpx;
  height: 24rpx;
  margin-right: 5rpx;
}
.page-content-item-title1 {
  margin-top: 20rpx;
  font-size: 24rpx;
  color: #999;
}
.page-content-item-title2 {
  font-size: 28rpx;
  color: #333;
  margin: 20rpx 0;
}
.page-content-item-img {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}
.page-content-item-img image {
  width: 226rpx;
  height: 226rpx;
  margin-bottom: 20rpx;
  border-radius: 5rpx;
}

.page .hasNoData {
  width: 100%;
  margin-top: 120rpx;
  text-align: center;
  color: #999;
  font-size: 34rpx;
}
.page .hasNoData image{
  display: block;
  width: 460rpx;
  height: 460rpx;
  margin: 0 auto;
}
.page-content-item-reply{
  background-color: #F4F4F4;
  padding: 20rpx;
  font-size: 28rpx;
  color: #666;
}
.page-content-item-reply text{
  color: #000;
}
