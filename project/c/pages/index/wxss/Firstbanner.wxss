/* banner start */
.bannerWrap{
  /* margin-left: 0rpx;
  margin-right: 0rpx;
  border-radius: 12rpx; */
  overflow: hidden;
  position: relative;
  margin-bottom: 20rpx;
}
.slide-image {
  width:702rpx;
  height: 100%;
  border-radius: 12rpx;
  transition: .8s all;
}
.bannerWrap swiper-item{
  text-align: center;
}
.banner-current{
  position: absolute;
  bottom: 10rpx;
  right: 60rpx;
  width: 44rpx;
  height: 22rpx;
  line-height: 22rpx;
  text-align: center;
  font-size: 20rpx;
  color: #fff;
  background: rgba(0, 0, 0, .26);
  border-radius: 14rpx;
}
.none{
  transform: scaleY(1);
}
.scale{
  transform: scaleY(.8);
}
/* banner end */