.pay_status{
  width: 100rpx;
  height: 100rpx;
  margin: 91rpx 0 20rpx;
}
.pay_status_txt{
  font-size: 36rpx;
  color: #333333;
  line-height: 1.2;
  margin-bottom: 20rpx;
}
.pay_money{
  font-size: 60rpx;
  color: #222222;
  line-height: 1.2;
  margin: 33rpx 0 25rpx;
}
.fahtz_txt{
  font-size: 30rpx;
}
.pay_status_btn{
  width: 100%;
  text-align: center;
  margin-top: 70rpx;
  justify-content: center;
}
.order_btn, .goIndex_btn{
  width: 230rpx;
  height: 64rpx;
  line-height: 64rpx;
  border: 2rpx solid #FD455F;
  border-radius: 47.5rpx;
  font-size: 28rpx;
  margin: 0 35rpx;
}
.order_btn{
  color: #FD455F;
}
.goIndex_btn{
  background: #FD455F;
  color: #fff;
}
.goIndex_btns{
  margin-top: 178rpx;
}
.mt115{
  margin-bottom: 115rpx;
}
.resultWrap{
  position: fixed;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, .7);
  z-index: 999;
  top: 0;
  left: 0;
  display: flex;
  justify-content: center;
  align-items: center;
}
.result_con{
  position: absolute;
  width: 580rpx;
  left: 50%;
  margin-left: -290rpx;
  max-height: 860rpx;
}
.result_top{
  position: relative;
  width: 100%;
  height: 306rpx;
}
.result_top .close{
  position: absolute;
  width: 100rpx;
  height: 100rpx;
  top: 42rpx;
  right: 0rpx;
  padding-top: 20rpx;
  padding-left: 18rpx;
}
.result_top image{
  display: block;
  width: 100%;
  height: 100%;
}
.close image{
  display: block;
  width: 44rpx;
  height: 44rpx;
}
.result_bom{
  width: 100%;
  min-height: 316rpx;
  max-height: 554rpx;
  background: #fff;
}
.result_scroll{
  width: 522rpx;
  max-height: 539rpx;
  overflow-y: scroll;
  margin: auto;
  padding-top: 15rpx;
  padding-bottom: 100rpx;
  box-sizing: border-box;
}
.result_item{
  width: 100%;
  height: 175rpx;
  margin-bottom: 14rpx;
  padding: 12rpx 25rpx;
  box-sizing: border-box;
  border:1px solid rgba(244,244,244,1);
  overflow: hidden;
  position: relative;
}
.result_bg{
  position: absolute;
  width: 95rpx;
  height: 100%;
  top: 0;
  right: 0;
}
.result_left{
  float: left;
   color:#FF5A60;
}
.price{
  font-size: 66rpx;
  margin-bottom: 10rpx;
}
.price text{
  font-size: 34rpx;
}
.re_date{
  font-size: 18rpx;
  line-height: 18rpx;
  color: #999;
}
.re_name{
  font-size: 28rpx;
  line-height: 28rpx;
  color: #65626D;
  margin-bottom: 6rpx;
}
.result_right{
  float: right;
  font-size: 28rpx;
  color: #FF5A60;
  margin-top: 109rpx;
}
.result_txt{
  width: 580rpx;
  height: 98rpx;
  position: absolute;
  bottom: 0rpx;
  left:0;
  font-size: 20rpx;
  color: #999;
  line-height: 28rpx;
  text-align: center;
  background: #fff;
  padding: 28rpx 53rpx 10rpx 53rpx;
  box-sizing: border-box;
}
.result_lay{
  position: absolute;
  width: 580rpx;
  height: 40rpx;
  bottom: 98rpx;
  background: linear-gradient(to bottom, rgba(255,255,255,0), rgba(255,255,255,1));
}