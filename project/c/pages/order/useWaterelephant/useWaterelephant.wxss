page,.page{
  width: 100%;
  height: 100%;
  background: #F4F4F4;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
}
/* 卡 start */
.cardList{
  padding-top: 30rpx;
  width: 100%;
  flex: 1;
  overflow-y: auto;
}
.cardWrap{
  display: flex;
}
.card{
  width: 636rpx;
  height: 290rpx;
  border-radius: 11rpx;
  position: relative;
  color: #fff;
  margin-bottom: 20rpx;
  overflow: hidden;
  margin-left: 30rpx;
}
.labelWrap{
  width: 84rpx;
  height: 290rpx;
  display: flex;
  align-items: center;
}
.label{
  width: 36rpx;
  height: 36rpx;
  border: 2rpx solid #999999;
  border-radius: 50%;
  margin-left: 20rpx;
  position: relative;
}
.label.active {
  border-color: #FD455F;
}
.label.notClick {
  border-color: #ccc;
}
.label.notClick::after{
  content: '';
  position: absolute;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  margin: auto;
  width: 20rpx;
  height: 20rpx;
  border-radius: 50%;
  background: #ccc;
}
.label.active::after{
  content: '';
  position: absolute;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  margin: auto;
  width: 20rpx;
  height: 20rpx;
  border-radius: 50%;
  background: #FD455F;
}
.cardBg{
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  z-index: 8;
}
.cardBalance{
  text-align: center;
  position: relative;
  z-index: 9;
  margin-top: 30rpx;
  margin-bottom: 24rpx;
  display: flex;
  justify-content: center;
  align-items: flex-end;
}
.cardBalance>text{
  display: block;
}
.cardBalanceTxt{
  font-size: 36rpx;
  font-weight: 600;
  height: 36rpx;
}
.smallBefore,.moneySmall{
  font-size: 54rpx;
  font-weight: bold;
  height: 54rpx;
}
.moneyBig{
  font-size: 109rpx;
  height: 109rpx;

  
}
.moneySmall{

}
.cardValidity{
  font-size: 22rpx;
  line-height: 30rpx;
  position: relative;
  z-index: 9;
  text-align: center;
}
.cardFaceValue{
  height: 73rpx;
  line-height: 73rpx;
  padding-left: 20rpx;
  position: absolute;
  left: 0;
  bottom: 0;
  color: #999;
  font-size: 24rpx;
  z-index: 9;
}
/* 卡 end */
.selectUse{
  width: 100%;
  height: 120rpx;
  background-color: #fff;
  display: flex;
  justify-content: center;
  align-items: center;
}
.selectUseBtn{
  width: 610rpx;
  height: 78rpx;
  line-height: 78rpx;
  text-align: center;
  color: #fff;
  background: #FD455F;
  font-size: 30rpx;
  border-radius: 40rpx;
}