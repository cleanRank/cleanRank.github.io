.helpDetail {
  margin: 24rpx 24rpx 0;
  box-shadow: 0 0 12rpx 0 rgba(0, 0, 0, 0.08);
  border-radius: 12rpx;
  background-color: #fff;
  font-size: 28rpx;
  margin-bottom: 20rpx;
}
.helpDetailTitle{
  line-height: 40rpx;
  padding-top: 20rpx;
  padding-bottom: 14rpx;
  padding-left: 24rpx;
}
.helpDetailContent{
  padding: 0 24rpx 20rpx; 
}
.helpDetailText{
  line-height: 44rpx;
  display: block;
  color: #777;
}
.helpDetailImgCon{
  text-align: center;
  font-size: 0;
}
.helpDetailImgWrap{
  margin-left: auto;
  margin-right: auto;
  display: inline-block;
  font-size: 0;
  margin-bottom: 24rpx;
  box-shadow: 0 0 11rpx 0 rgba(0,0,0,0.15);
  width: 610rpx;
}
.helpDetailImg{
  width: 610rpx;
}