@import "../finding.wxss";
page{
  background: #fff;
}
.overClass{
  height: 100vh;
  position: fixed;
  left: 0;
  top: 0;
  overflow: hidden;
}
.goodSwiperWrap{
  position: relative;
  width: 100%;
}
.goodSwiper{
  width: 100%;
  height: 750rpx;
}
swiper-item image{
  display: block;
  width: 100%;
  height: 100%;
}
.goodSwiperDot{
  width: 52rpx;
  height: 32rpx;
  background: rgba(0,0,0,.2);
  border-radius: 32rpx;
  position: absolute;
  bottom: 30rpx;
  right: 30rpx;
  color: #fff;
  font-size: 24rpx;
  text-align: center;
  line-height: 32rpx;
}
.detail_con{
  width: 100%;
  text-align: justify;
  padding: 0rpx 40rpx 60rpx 40rpx;
  box-sizing: border-box;
}
.detail_tit{
  font-size: 36rpx;
  line-height: 58rpx;
  display: -webkit-box;   
  -webkit-box-orient: vertical;   
  text-overflow: ellipsis;  
  overflow: hidden;
  -webkit-line-clamp: 2; 
  margin-bottom: 24rpx;
  font-weight: bold;
  word-break: break-all;
}
.detail_txt{
  font-size: 30rpx;
  line-height: 54rpx;
}
.detail_list{
  width: 100%;
  padding: 0 40rpx;
  padding-bottom: 6rpx;
  box-sizing: border-box;
}
.find_con_detail{
   width: 100%;
   height: 184rpx;
   overflow: hidden;
   background: #fff;
   box-shadow:0px 0px 12px 0px rgba(0,0,0,0.1);
   border-radius:12px;
   margin-bottom: 40rpx;
   position: relative;
}
.find_con_detail image{
  float: left;
  width: 184rpx;
  height: 184rpx;
  margin-right: 16rpx;
}
.find_con_detail .saveno{
  position: absolute;
  width: 147rpx;
  height: 147rpx;
  left: 19rpx;
  top: 19rpx;
  z-index: 99;
  margin-right: 0;
}
.find_con_detail .find_con_detail_info{
  float: left;
  width: 442rpx;
  font-size: 28rpx;
}
.find_con_detail_tit{
  height: 88rpx;
  display: -webkit-box;   
  -webkit-box-orient: vertical;   
  text-overflow: ellipsis;  
  overflow: hidden;
  -webkit-line-clamp: 2; 
  margin-top: 16rpx;
  text-align: justify;
}
.find_con_detail_price{
   overflow: hidden;
   margin-top: 22rpx;
}
.find_con_detail_price .detail_price_left{
  float: left;
  font-size: 26rpx;
  color: #FF5A60;
}
.detail_price_left text{
  font-size: 32rpx;
}
.detail_price_left .delete{
  font-size: 24rpx;
  text-decoration: line-through;
  margin-left: 16rpx;
}
.find_con_detail_price .detail_price_right{
  float: right;
  width: 112rpx;
  height: 40rpx;
  border-radius: 40rpx;
  background-color: #FD455F;
  color:#fff;
  text-align: center;
  line-height: 40rpx;
  font-size: 20rpx;
}
.header{
  width: 670rpx;
  height: 64rpx;
  margin: 45rpx auto;
  padding: 0;
}
.header .find_txt{
  font-size: 28rpx;
  line-height: 28rpx;
}
.header .avator{
  width: 64rpx;
  height: 64rpx;
}
.header .share{
  width: 44rpx;
  height: 44rpx;
  margin-top: 10rpx;
}
.backHome{
  position: fixed;
  top: 30rpx;
  right: 0;
  color: #fff;
  font-size: 24rpx;
  font-weight: 500;
  background: #FD455F;
  padding-left: 29rpx;
  padding-right: 17rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  border-radius: 30rpx 0rpx 0 30rpx;
}
.wxParse-img{
  display: block;
  max-width: 100% !important;
  height: auto;
  margin-left: auto;
  margin-right: auto;
}
.wxParse-video-video{
  width: 100% !important;
  height: 380rpx;
}
.wxParse-inline{
  display: inline !important;
}