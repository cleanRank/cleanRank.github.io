.serve {
  margin-left: 24rpx;
  margin-right: 24rpx;
  box-shadow: 0 0 12rpx 0 rgba(0, 0, 0, 0.06), 0 8rpx 8rpx 0 rgba(0, 0, 0, 0.02);
  border-radius: 12rpx;
  margin-bottom: 32rpx;
  background-color: #fff;
}
.serve:first-child .serveList .serveItem {
  flex: 1;
}
.serveList {
  display: flex;
  flex-wrap: wrap;
}

.serveTitle {
  height: 66rpx;
  line-height: 66rpx;
  font-size: 30rpx;
  color: #333;
  margin-left: 24rpx;
  border-bottom: 1px solid #F8F8F8;
}

.serveItem {
  display: flex;
  flex-direction: column;
  width: 25%;
  text-align: center;
  position: relative;
}

.serveItemImg {
  /* width: 60rpx;
  height: 60rpx; */
  width: 74rpx;
  height: 74rpx;
  margin: 0 auto;
  margin-top: 30rpx;
  margin-bottom: 10rpx;
}

.serveItemName {
  /* color: #777; */
  /* font-size: 26rpx; */
  color: #65626D;
  font-size: 22rpx;
  margin-bottom: 26rpx;
  line-height: 1.2;
}
.serveOrderNum{
  position: absolute;
  top: 28rpx;
  right: 30rpx;
  font-size: 22rpx;
  color: #fff;
  background-color:#FD455F;
  width: 28rpx;
  height: 28rpx;
  line-height: 28rpx;
  text-align: center;
  border-radius: 14rpx;
}
.serveOrderNum.doubleNum{
  width: 36rpx;
}
.serveItem-button{
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  opacity: 0;
  z-index: 1;
}