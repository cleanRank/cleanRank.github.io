  margin-left: 24rpx;
  border-bottom: 2rpx solid #f8f8f8;
  align-items: center;
}

.formList .formItem:last-of-type {
  border-bottom: none;
}

.horizontalLine {
  height: 10rpx;
  background: #fbfbfb;
}

.formItem .formItemLable {
  font-size: 28rpx;
  width: 112rpx;
  margin-left: 2rpx;
  margin-right: 40rpx;
}

