  font-size: 28rpx;
}

.formItem .formItemIpt {
  font-size: 28rpx;
  height: 88rpx;
  line-height: 88rpx;
  padding-right: 24rpx;
}

.getCodeBtn {
  width: 168rpx;
  height: 42rpx;
  line-height: 40rpx;
  border: 1rpx solid #FD455F;
