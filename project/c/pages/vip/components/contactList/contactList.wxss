/* pages/vip/components/contactList/contactList.wxss */
.address-list{
    padding-top: 50rpx;
}
.address-item{
    height: 134rpx;
    margin:0 30rpx;
    border-bottom: 2rpx solid #f5f5f5;
    line-height: 134rpx;
    display: flex;
    align-items: center;
}
.img{
    width: 80rpx;
    height: 80rpx;
    border-radius: 7rpx;
}
.name{
    margin-left: 20rpx;
    font-size: 32rpx;
    color: #333;
}
.icon-check{
    width: 30rpx;
    height: 30rpx;
    margin-right: 36rpx;
}
.changeBtn{
    position: fixed;
    bottom: 0;
    left:0;
    width:100%;
    height: 98rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    z-index: 999;
    background: #fff;
}
.changeItem{
    flex:1;
    height: 98rpx;
    font-size: 30rpx;
    line-height: 98rpx;
    height: 100%;
    background: #fff;
    color: #444;
    text-align: center;
}
.changeBtn .sure{
    background: #FD455F;
    color: #FFFFFF;
}
/* 弹框 */
.modalWrap{
    position: fixed;
    top:0;
    left: 0;
    right:0;
    bottom:0;
    background: rgba(0,0,0,.5);
    display: flex;
    justify-content: center;
    align-items: center;
    z-index: 500;
}
.modalBox{
    width: 580rpx;
    border-radius: 12rpx;
    background:#fff;
    position: relative;
    z-index: 99;
}
.modalHeader{
    font-size: 34rpx;
    height: 48rpx;
    color: #444;
    text-align: left;
    margin: 40rpx 0 54rpx 40rpx;
}
.modalContent{
    padding-left: 43rpx;
    display:flex;
    justify-content: flex-start;
    align-items: center;
}
.modalContent image{
    width: 84rpx;
    height: 84rpx;
    margin-right: 22rpx;
    border-radius: 50%;
}
image{
    width: 100%;
    height: 100%;
}
.modalContent .userName{
    font-size: 30rpx;
    color: #333;
    max-width: 400rpx;
    overflow: hidden;
    text-overflow:ellipsis;
    white-space:nowrap;
}
.productInfo{
    font-size: 30rpx;
    color: #999;
    width: 500rpx;
    height: 88rpx;
    line-height: 42rpx;
    padding: 23rpx 10rpx;
    margin: 24rpx 0 62rpx 40rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    background: #F4F4F4;
    box-sizing: border-box;
}
.closeBtn{
    width: 44rpx;
    height: 44rpx;
    padding: 9rpx;
    box-sizing: border-box;
    overflow: hidden;
    position: absolute;
    top: 24rpx;
    right:24rpx;
}

.modalBtns{
    display:flex;
    justify-content:space-between;
    align-items:center;
    margin-bottom:40rpx;
    padding:0 40rpx;
}
.modalBtn {
    font-size:30rpx;
    width:240rpx;
    height:78rpx;
    border-radius:42rpx;
    border:1rpx solid #DBDBDB;
    display:flex;
    justify-content:center;
    align-items:center;

}
.btns_cancel{
    background: #fff;
    color: #999;
}
.btns_confirm{
    background: #FD455F;
    color: #fff;
}