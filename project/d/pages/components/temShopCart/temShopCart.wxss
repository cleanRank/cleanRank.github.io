/* 搜索商品 */
.totalBg {
  background: #F4F4F4;
  /* height: 1218rpx; */
}

.totalBg .mod {
  margin-bottom: 20rpx;
}

.pages {
  width: 640rpx;
  height: 60rpx;
  background: rgba(245, 245, 245, 1);
  border-radius: 31rpx;
  font-size: 28rpx;
  margin: 10rpx 0rpx 35rpx 0;
  padding: 0 30rpx;
}

.page {
  display: flex;
  justify-items: center;
  align-items: center;
}

.title {
  /* line-height:60rpx; */
  font-size: 28rpx;
  width: 92%;
}

.text {
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(51, 51, 51, 1);
}

.noData {
  display: flex;
  align-items: center;
  flex-direction: column;
  margin-top: 100rpx;
}

.nodata {
  font-size: 36rpx;
  font-family: PingFangSC-Semibold;
  font-weight: 600;
  color: rgba(102, 102, 102, 1);
  line-height: 50rpx;
}

.noData .img {
  width: 300rpx;
  height: 280rpx;
}

.commonSearch {
  width: 45rpx;
  height: 45rpx;
  margin: 25rpx 25rpx 25rpx 0;
}

.localText {
  font-size: 30rpx;
  font-family: PingFangSC-Semibold;
  font-weight: 600;
  color: rgba(51, 51, 51, 1);
}

.mg-l,
.mg-r {
  margin-left: 25rpx;
}

.searchGoods {
  padding: 0 30rpx;
  background: #fff;
  position: relative;
  /* margin-bottom:98rpx; */
}

.history {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-left: 20rpx;
}

.shopHistory {
  line-height: 50rpx;
  background: rgba(242, 242, 242, 1);
  border-radius: 25rpx;
  text-align: center;
  font-size: 24rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(102, 102, 102, 1);
  display: inline-block;
  margin: 16rpx 20rpx 0 10rpx;
  min-width: 118rpx;
}

.scroll-height1 {
  padding-bottom: 98rpx;
  background: #fff;
}

.scroll {
  overflow-y: scroll;
  height: 100%;
  /* height: */
}

.shopPic {
  width: 140rpx;
  height: 140rpx;
  margin-right: 20rpx;
}

.select {
  width: 24rpx;
  height: 26rpx;
}

.total {
  font-size: 28rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(51, 51, 51, 1);
  line-height: 42rpx;
  margin-left: 20rpx;
}

.total1 {
  font-size: 24rpx;
}

.showShopList-wrap {
  /* overflow-y: auto; */
  max-height: 500rpx;
}

.showShopList {
  display: flex;
  align-items: center;
  padding: 20rpx;
  justify-content: space-between;
  background: #fff;
}

.flexible {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.fixed {
  position: fixed;
  width: 100%;
  height: 80rpx;
  top: 0;
}

.box_shadow {
  box-shadow: 0px -3rpx 12rpx 0px rgba(204, 204, 204, 0.5);
  border-radius: 10rpx 10rpx 0px 0px;
  padding-top: 80rpx;
}

.shopDescription {
  justify-content: space-between;
  display: flex;
  width: 100%;
  align-items: center;
}

.pd_3 {
  padding: 10rpx 33rpx;
}

.mg {}

.clear {
  background: rgba(255, 48, 48, 0.0463);
  border-radius: 20rpx 20rpx 0px 0px
}

.shopName {
  font-size: 30rpx;
  font-family: PingFang-SC-Regular;
  font-weight: 400;
  color: rgba(51, 51, 51, 1);
  width: 50%;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.price {
  font-size: 28rpx;
  font-family: PingFangSC-Semibold;
  font-weight: 600;
  color: rgba(255, 88, 75, 1);
  line-height: 34rpx;
}
.disprice {
  margin-left: 20rpx;
  font-size: 24rpx;
  color: #999;
  text-decoration:line-through;
}

.num {
  font-size: 26rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(51, 51, 51, 1);
  line-height: 37rpx;
}

.bottomShopCar {
  padding: 0 20rpx;
  display: flex;
  align-items: center;
  position: fixed;
  bottom: 0;
  height: 98rpx;
  width: 100%;
  background: rgba(255, 255, 255, 1);
  box-shadow: 0px -3rpx 12rpx 0px rgba(204, 204, 204, 0.5);
}

.totalPrice {
  flex: 5;
  margin-left: 20rpx;
  font-size: 34rpx;
  font-family: PingFangSC-Semibold;
  font-weight: 600;
  color: rgba(255, 88, 75, 1);
  line-height: 34rpx;
}

.selectedBtn {
  flex: 3;
  width: 280rpx;
  font-size: 36rpx;
  line-height: 100rpx;
  background: rgba(255, 48, 48, 1);
  color: #fff;
  text-align: center;
}

.shopCarNum {
  display: flex;
  justify-content: center;
  align-items: center;
  top: 20rpx;
  left: 45rpx;
  position: absolute;
  min-width: 30rpx;
  min-height: 30rpx;
  font-size: 20rpx;
  background: rgba(255, 88, 75, 1);
  border-radius: 50%;
  color: #fff;
}

.searchHistory {
  padding: 10rpx 0 10rpx 10rpx;
  font-size: 28rpx;
  border-bottom: 1rpx solid #fff;
}

.searchWords {
  position: absolute;
  top: 60rpx;
  left: 95rpx;
  width: 80%;
  min-height: 100rpx;
  background: rgba(245, 245, 245, 1);
  color: rgba(102, 102, 102, 1);

}

.outerLi .fixedLi {
  width: 32rpx;
  height: 32rpx;
  position: absolute;
  left: 0;
  top: 0;
}

.outerLi {
  position: relative;
}