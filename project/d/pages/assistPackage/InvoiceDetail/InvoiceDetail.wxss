page {
  width: 100%;
  height: 100%;
}

.InvoiceDetail .content {
  margin-top: 20rpx;
  padding: 0 25rpx;
  background: #fff;
}

.InvoiceDetail .content .orderInfo {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 26rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(51, 51, 51, 1);
  line-height: 80rpx;
  border-bottom: 1px solid rgba(242, 242, 242, 1);
  padding: 20rpx 0;
}

.InvoiceDetail .content .orderInfo1 {
  border-bottom: none;
  padding: 0;
}

.InvoiceDetail .orderInfo .keyWord {
  font-size: 28rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(51, 51, 51, 1);
  line-height: 28rpx;
}

.InvoiceDetail .orderInfo .value {
  font-size: 28rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(153, 153, 153, 1);
  line-height: 34rpx;
}

.InvoiceDetail .orderInfo .flex {
  width: 100%;
  display: flex;
  justify-content: flex-end;
  align-items: center;
}

.InvoiceDetail .flex .btn {
  width: 140rpx;
  height: 46rpx;
  line-height: 46rpx;
  background: rgba(255, 249, 249, 1);
  color: rgba(212, 212, 212, 1);
  border-radius: 8rpx;
  text-align: center;
}

.InvoiceDetail .flex .btn1 {
  color: rgba(255, 48, 48, 1);
  border: 1px solid rgba(255, 48, 48, 1);
  background: rgba(255, 249, 249, 1);
}

.mgl {
  margin-left: 20rpx;
}

.modal {

  background: rgba(0, 0, 0, .5);
  position: fixed;
  left: 0;
  top: 0;
  bottom: 0;
  right: 0;
  z-index: 10;
  display: flex;
  align-items: center;
}

.modal-content {
  width: 630rpx;
  height: 343rpx;
  background-color: #fff;
  border-radius: 12rpx;
  margin: 0 auto;
}

.emailTitle {
  width: 224rpx;
  height: 45rpx;
  font-size: 32rpx;
  font-family: PingFang-SC-Medium;
  font-weight: 500;
  color: rgba(51, 51, 51, 1);
  line-height: 45rpx;
  margin: 0 auto;
  /* margin: 40rpx 0; */
  text-align: center;
  padding-top: 50rpx;
}

.bgLoading {
  background: rgba(0, 0, 0, 1);
  width: 100%;
  height: 100%;
  position: relative;
  z-index: 9;
}

.ipt {
  width: 461rpx;
  height: 64rpx;
  border-radius: 5rpx;
  border: 2rpx solid rgba(233, 233, 233, 1);
  margin: 40rpx auto;
}

.bottom_btn {
  display: flex;
  align-items: center;
  border-top: 1px solid rgba(216, 216, 216, 1);
}

.modal_btn {
  flex: 1;
  text-align: center;
  font-size: 36rpx;
  font-family: PingFang-SC-Medium;
  font-weight: 500;
  line-height: 98rpx;
}

.send {
  color: rgba(255, 48, 48, 1);
  border-right: 1px solid rgba(216, 216, 216, 1);
}

.close {
  color: rgba(161, 161, 161, 1);
}