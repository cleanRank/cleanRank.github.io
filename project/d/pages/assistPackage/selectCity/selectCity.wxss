
/* 搜索城市 */
.localIcon{
  width:28rpx;
  height:28rpx;
  margin: 0 4rpx 0 26rpx;
}
.currentLocation{
  margin:20rpx 0 30rpx 24rpx;
  font-size:24rpx;
  font-family:PingFangSC-Regular;
  font-weight:400;
  color:rgba(153,153,153,1);
}
.localText{
  font-size:30rpx;
  font-family:PingFangSC-Semibold;
  font-weight:600;
  color:rgba(51,51,51,1);
}
.head{
  padding: 20rpx 0; 
}
.number{
  width:750rpx;
  height:45rpx;
  background:rgba(245,245,245,1);
  font-size:28rpx;
  font-family:PingFangSC-Regular;
  font-weight:400;
  color:rgba(153,153,153,1);
  padding-left: 24rpx;
}
.numberList{
  position: fixed;
  left: 96%;
  top: 25%;
  font-size:20rpx;
  font-family:PingFangSC-Regular;
  font-weight:400;
  color:rgba(136,136,136,1);
  line-height:26rpx;
}
.city{
  font-size:30rpx;
  font-family:PingFangSC-Regular;
  font-weight:400;
  color:rgba(51,51,51,1);
  padding-left:84rpx;
  margin-left:20rpx;
  line-height: 88rpx;
  border-bottom: 1rpx solid rgba(238,238,238,1);
}
.scrollView{
  height: 600px;
}