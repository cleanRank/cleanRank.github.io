/* pages/fpages/discountPage/discountPage.wxss */
.discount-btn {
  width: 100%;
  height: 94rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  position: relative;
  background: #fff;
}
.discount-btn view {
  width: 158rpx;
  height: 54rpx;
  text-align: center;
  line-height: 54rpx;
  font-family:PingFangSC-Semibold;
  font-weight:600;
  color:#ABABAB;
  font-size:30rpx;
letter-spacing:2rpx;
}
.discount-btn .active{
  background: rgba(255, 48, 48, 1);
  border-radius: 4px;
  color:rgba(255,255,255,1);
}
.show{
display: block;
}
.hidden{
display: none;
}